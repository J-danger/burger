<div class="text-center">
<div class="container">
	<div class="jumbotron">
		<p> burger image placeholder</p>
		<h1>Eat Muh Burgers</h1>
	</div>
	

	<div class="row">

		<div class="col-md-6">
			<div class="panel-panel default">
				<h3>Burgers that are Ready</h3>
				<ul class="list-group">
					{{#each burgers}}
					{{#unless this.devoured}}
					<li class="list-group-item">
					<div class="input-group">
						<p class="lead">{{this.burger_name}}</p>
						<span class="input-group-btn">
							<form action="/burgers/update/{{this.id}}?_method=PUT" method="POST">
								<input type="hidden" name="devoured">
								<button class="btn btn-default btn-sm" type="submit">Devour it!</button>
							</form>
						</span>
					</div>
					</li>
					{{/unless}}
					{{/each}}
				</ul>

			</div>
		</div>

	
		
			<div class="col-md-6">
				<h3>Devoured Burgers</h3>
				<div class="panel panel-default">
					<ul class="list-group">
						{{#each burgers}}
						{{#if this.devoured}}
						<li class="list-group-item">
							<p class="lead">{{this.burger_name}}</p>
						</li>
						{{/if}}
						{{/each}}
					</ul>
				</div>
			</div>
		
	</div>

	<div class="col-md-10 col-md-offset-1">
		<p class="lead"></p>
		
		<form class="create-update-form" action="burgers/create" method="POST">
		 <div class="form-group">
		 	<textarea class="form-control input-lg" placeholder="add burger & click submit" type="text" name="burger_name" row="3"></textarea>
		 </div>
		 <button class="btn btn-default btn-lg"  type="submit">Submit</button>
		</form>
	</div>

 </div>
</div>
</div>